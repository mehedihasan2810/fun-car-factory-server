generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String?
  email String  @unique
  role  Role    @default(USER)

  @@map("users")
}

model Car {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  email       String
  name        String
  price       String
  quantity    String
  rating      String
  sellerName  String
  url         String

  @@map("cars")
}

enum Role {
  USER
  ADMIN
}
